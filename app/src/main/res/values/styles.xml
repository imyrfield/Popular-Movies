<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/yellow_500</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="colorAccent">@color/yellow_500</item>
    </style>

    <!--               TEXT               -->
    <style name="style_text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <!-- Title Text -->
    <style name="style_text_title">
        <item name="android:layout_height">@dimen/title.view.height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/teal_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text.size.largest</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/default_margin</item>
        <item name="android:paddingRight">@dimen/default_margin</item>
        <item name="android:layout_marginBottom">@dimen/margin.half</item>
        <item name="android:minLines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- Small Text -->
    <style name="style_text_small" parent="style_text_base">
        <item name="android:textSize">@dimen/text.size.small</item>
        <item name="android:layout_margin">@dimen/default_margin</item>
    </style>

    <!-- Medium Text -->
    <style name="style_text_medium" parent="style_text_base">
        <item name="android:textSize">@dimen/text.size.medium</item>
        <item name="android:layout_margin">@dimen/margin.half</item>
    </style>

    <!-- Large Text -->
    <style name="style_text_large" parent="style_text_base">
        <item name="android:textSize">@dimen/text.size.large</item>
    </style>

    <!-- Disabled Text -->
    <style name="style_text_disabled" parent="style_text_base">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <!--               DIVIDER               -->
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/black_900</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--               BUTTONS               -->
    <style name="favorite_button">
        <item name="android:text">@string/detailview_favorite_button</item>
        <item name="android:drawableRight">@drawable/favorite_button</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginRight">@dimen/margin.half</item>
        <item name="android:textSize">@dimen/text.size.small</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:button">@null</item>
        <item name="android:enabled">true</item>
        <item name="android:checked">false</item>
    </style>

</resources>
