<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- AutoFits text which is would otherwise run off the screen -->
        <me.grantland.widget.AutofitTextView
            android:id="@+id/detailview_title"
            tools:text="Jurrasic Park"
            style="@style/style_text_title"
            />

        <!-- Main details portion-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin.half"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detailview_poster"
                tools:src="@drawable/jpark"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:paddingLeft="@dimen/margin.half"
                android:paddingRight="@dimen/margin.half"
                />

            <!--Content to the right of the image -->
            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/default_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/detailview_release_date"
                    tools:text="2015"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/style_text_medium"
                    />

                <TextView
                    android:id="@+id/detailview_duration"
                    tools:text="120min"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/style_text_medium"
                    />

                <TextView
                    android:id="@+id/detailview_rating"
                    tools:text="7.0/10"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    style="@style/style_text_medium"

                    />

                <CheckBox
                    android:id="@+id/favorite_checkbox"
                    style="@style/favorite_button"
                    />

            </LinearLayout>

        </LinearLayout>

        <!-- Bottom portion of screen (Synopsis, and Trailer)-->
        <TextView
            android:id="@+id/detailview_synopsis"
            tools:text="Twenty-two years after the events of Jurassic Park, Isla Nublar now features a fully functioning dinosaur theme park, Jurassic World, as originally envisioned by John Hammond."
            android:layout_height="wrap_content"
            style="@style/style_text_small"/>

        <TextView
            android:id="@+id/divider1"
            style="@style/divider"/>

        <TextView
            android:id="@+id/detailview_trailers_title"
            android:text="@string/detailview_trailers_title"
            android:layout_height="wrap_content"
            style="@style/style_text_small"/>

        <TextView
            android:id="@+id/divider2"
            style="@style/divider"/>

        <TextView
            android:id="@+id/detailview_reviews_title"
            android:text="@string/detailview_reviews_title"
            android:layout_height="wrap_content"
            style="@style/style_text_small"/>

    </LinearLayout>
</ScrollView>